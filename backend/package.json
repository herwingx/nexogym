{
  "name": "nexogym-backend",
  "version": "1.0.0",
  "description": "ERP multitenant de alto rendimiento para la gesti√≥n de gimnasios.",
  "main": "index.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "audit:high": "npm audit --audit-level=high",
    "db:push": "prisma db push && tsx prisma/apply-trigger.ts",
    "db:trigger": "tsx prisma/apply-trigger.ts",
    "db:setup": "prisma db push && tsx prisma/apply-trigger.ts",
    "db:seed": "prisma db seed",
    "db:fresh": "prisma migrate reset --force && prisma db push && tsx prisma/apply-trigger.ts",
    "db:reset": "prisma migrate reset --force",
    "db:studio": "prisma studio"
  },
  "keywords": ["saas", "erp", "gym", "multitenant", "nodejs", "typescript", "prisma", "supabase"],
  "author": "herwingx",
  "license": "MIT",
  "type": "commonjs",
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^25.3.0",
    "@types/pg": "^8.16.0",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "pino-pretty": "^13.1.3",
    "prisma": "^7.4.1",
    "supertest": "^7.2.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18",
    "vitest-mock-extended": "^3.1.0"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.4.1",
    "@prisma/client": "^7.4.1",
    "@supabase/supabase-js": "^2.97.0",
    "cors": "^2.8.6",
    "dotenv": "^17.3.1",
    "express": "^5.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "morgan": "^1.10.1",
    "pg": "^8.18.0",
    "pino": "^10.3.1",
    "pino-http": "^11.0.0",
    "prom-client": "^15.1.3",
    "swagger-jsdoc": "^7.0.0-rc.6",
    "swagger-ui-express": "^5.0.1",
    "zod": "^4.3.6"
  },
  "overrides": {
    "@apidevtools/swagger-parser": "12.1.0",
    "@apidevtools/json-schema-ref-parser": "15.2.2"
  }
